<div class="container">
    <div class="row">
    <div class="col-12" id="col">
      <img src="/assets/img/eat_that.png" alt="eat_that_burger">
    </div>
  </div>
  <div class="row">
    <div class="col-1"><!--Divider--></div>
    <div class="col-4" id="col" style="text-align: left">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
     <div class="col-1" id="col" style="text-align: left">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger/burger-button}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-1"><!--Divider--></div>
    <div class="col-4" id="col" style="text-align: left">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger/burger-block devoured=1}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-12" id="col">
      <form class="create-form">
        <div class="form-group">
          <label for="bu"></label>
          <input type="text" id="bu" name="burger_name">
        </div>
        <button type="submit">Submit</button>
        <p>Enter a Burger you want to eat Click the "Submit" button</p>
      </form>
    </div>
  </div>
</div>